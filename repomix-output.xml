            setChallengeData(selectedChallenge);
          }
        }
        
        // L√ìGICA CORRIGIDA PARA CALCULAR O PESO NECESS√ÅRIO
        if (finalChallengeData?.peso_carga_kg && cargoAmount) {
            const calculatedWeight = Math.round(finalChallengeData.peso_carga_kg * (cargoAmount / 100));
            setRequiredCapacity(calculatedWeight);
            console.log(`‚öñÔ∏è Peso da carga REAL definido: ${calculatedWeight}kg (${cargoAmount}% de ${finalChallengeData.peso_carga_kg}kg)`);
        } else if (finalChallengeData?.peso_carga_kg) {
            setRequiredCapacity(finalChallengeData.peso_carga_kg);
            console.log(`‚öñÔ∏è Usando peso da carga TOTAL como fallback: ${finalChallengeData.peso_carga_kg}kg`);
        } else {
            console.warn("‚ö†Ô∏è N√£o foi poss√≠vel determinar o peso da carga do desafio.");
        }

