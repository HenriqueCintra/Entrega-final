    const clearError = () => {
        if (error) setError("");
    };

    const handleForgotPassword = (e: React.MouseEvent) => {
        e.preventDefault();
        navigate("/forgot-password");
    };

    /**
     * Fun√ß√£o principal de submiss√£o do formul√°rio de login.
     */
    const handleSubmit = async (e: React.FormEvent) => {
        e.preventDefault();
        if (!username || !password) {
            setError("Por favor, preencha todos os campos");
            return;
        }
        setLoading(true);
        setError("");

        try {
            await login(username, password);
            // Ap√≥s o login bem-sucedido, navega para a sele√ß√£o de jogos
