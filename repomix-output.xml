  // ‚úÖ‚úÖ‚úÖ FUN√á√ÉO DE TICK ATUALIZADA COM SUPORTE A ABASTECIMENTO ‚úÖ‚úÖ‚úÖ
  async partidaTick(data: TickData): Promise<TickResult> {
    const logQueuer = data.quer_abastecer ? ' (üîç PROCURANDO POSTO)' : '';
    console.log(`‚è±Ô∏è Enviando tick: ${data.distancia_percorrida.toFixed(2)}km${logQueuer}`);

    try {
      const response = await api.post<PartidaResponse>('/jogo1/partidas/tick/', data);
      console.log('‚úÖ Tick processado - Tempo oficial:', response.data.tempo_jogo?.toFixed(2), 'min');

      // ‚úÖ VERIFICA SE O BACKEND RETORNOU UM EVENTO_PENDENTE
      if (response.data.eventos_ocorridos) {
        const eventoPendente = response.data.eventos_ocorridos.find(evento => evento.opcao_escolhida === null);

        if (eventoPendente) {
          const categoria = eventoPendente.evento.categoria;
          const isAbastecimento = categoria === 'abastecimento';

          console.log(`üé≤ Evento pendente detectado: "${eventoPendente.evento.nome}" (${categoria})`);

          if (isAbastecimento) {
            console.log('‚õΩ Evento de ABASTECIMENTO detectado - Frontend deve mostrar modal de posto');
          } else {
            console.log('üé≠ Evento NORMAL detectado - Frontend deve mostrar modal de evento');
          }

          return {
            ...response.data,
            evento_pendente: eventoPendente
          };
        }
      }

      // ‚úÖ VERIFICA SE H√Å EVENTO_PENDENTE DIRETO NA RESPOSTA (PARA EVENTOS DE ABASTECIMENTO)
      if ((response as any).data.evento_pendente) {
        const eventoPendente = (response as any).data.evento_pendente;
        console.log(`‚õΩ Evento de abastecimento retornado diretamente: "${eventoPendente.evento.nome}"`);

        return {
          ...response.data,
          evento_pendente: eventoPendente
        };
      }

      // Sem eventos pendentes
      console.log('‚úÖ Tick processado sem eventos pendentes');
      return response.data;

    } catch (error) {
      console.error('‚ùå Erro no tick:', error);
      throw error;
    }
  },

  // ‚úÖ‚úÖ‚úÖ NOVA FUN√á√ÉO DE ABASTECIMENTO ‚úÖ‚úÖ‚úÖ
  async processarAbastecimento(data: { litros: number; custo: number }): Promise<PartidaResponse> {
