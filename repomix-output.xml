          // Marca este marco como conclu√≠do para n√£o repetir
          backgroundTransitionsDone.current.push(milestone);

          // Inicia o efeito de zoom
          startZoomEffect();

          // Aguarda o zoom inicial antes de come√ßar a transi√ß√£o de fade
          k.wait(ZOOM_CONFIG.LEAD_IN_TIME, () => {
