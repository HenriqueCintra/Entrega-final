            // Alterna o cen√°rio
            const targetBg = currentBg.current === 'cidade' ? 'terra' : 'cidade';
            nextBg.current = targetBg;

            const bgToActivate = k.get(`bg_${targetBg}`);
            if (bgToActivate.length >= 2) {
